generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CVUser {
  id         Int      @id @default(autoincrement())
  fullName   String
  email      String?
  phone      String?
  skills     String?   // JSON string or comma separated
  experience String?   // free text
  pdfPath    String    // path or URL to uploaded PDF
  createdAt  DateTime  @default(now())
}
